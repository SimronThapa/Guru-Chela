<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#BDEFB8"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <EditText
            android:id="@+id/et_subname_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Subject Name..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <EditText
            android:id="@+id/et_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
             android:inputType="number"
            android:hint="Total Lectures..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <EditText
            android:id="@+id/et_bunked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
             android:inputType="number"
            android:hint="Bunked Lectures..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp" >

        <EditText
            android:id="@+id/et_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:inputType="number"
             android:hint="Min percent required..."
            android:ems="10" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ivsave_bunk_info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#1B5B13"
        android:src="@android:drawable/ic_menu_save" />

</LinearLayout>