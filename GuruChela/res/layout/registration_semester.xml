<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#BDEFB8"
    android:orientation="vertical"
    android:padding="16dp" >

    <RadioGroup
        android:id="@+id/rg_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/msg"
        android:padding="10dp" >

        <RadioButton
            android:id="@+id/rb1sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="1st Semester"
            android:textColor="@color/BGgreen" />

        <RadioButton
            android:id="@+id/rb2sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Semester"
            android:textColor="@color/BGgreen" />

        <RadioButton
            android:id="@+id/rb3sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3rd Semester"
            android:textColor="@color/BGgreen" />

        <RadioButton
            android:id="@+id/rb4sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4th Semester"
            android:textColor="@color/BGgreen" />

        <RadioButton
            android:id="@+id/rb5sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5th Semester"
            android:textColor="@color/BGgreen" />

        <RadioButton
            android:id="@+id/rb6sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6th Semester"
            android:textColor="@color/BGgreen" />

        <RadioButton
            android:id="@+id/rb7sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7th Semester"
            android:textColor="@color/BGgreen" />

        <RadioButton
            android:id="@+id/rb8sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8th Semester"
            android:textColor="@color/BGgreen" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/b_semesterOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="OK" />

</LinearLayout>