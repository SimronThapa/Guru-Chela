<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#BDEFB8"
     >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Registration Form"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/BGgreen" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Firstname LastName..."
        android:inputType="textPersonName"
        android:padding="10dp" >
    </EditText>

    <EditText
        android:id="@+id/etUName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Give your account a Username..."
        android:padding="10dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Set a Password..."
        android:inputType="textPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etCPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirm your Password..."
        android:inputType="textPassword"
        android:padding="10dp" />

    <Spinner
        android:id="@+id/sRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:minHeight="60dp"
        android:popupBackground="@color/BGgreen" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:enabled="false"
        android:text="Hit the &apos;Authentication Code&apos; provided by your Institution..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/BGgreen"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/etAcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Authentication Code"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/ibSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
         android:background="@drawable/button_bg"
        android:src="@android:drawable/ic_menu_save" />

</LinearLayout>